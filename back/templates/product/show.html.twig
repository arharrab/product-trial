{% extends 'layouts/base_admin.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ product.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ product.quantity }}</td>
            </tr>
            <tr>
                <th>InternalReference</th>
                <td>{{ product.internalReference }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>
                    {% if product.category %}
                        {{ product.category.name }}
                    {% else %}
                        Aucune catégorie associée.
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>ShellId</th>
                <td>{{ product.shellId }}</td>
            </tr>
            <tr>
                <th>InventoryStatus</th>
                <td>{{ product.inventoryStatus.value }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ product.rating }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ product.createdAt }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ product.updatedAt }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">Retour à la liste</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">Modifier</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
